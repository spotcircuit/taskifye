{
  "name": "taskifye-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node node_modules/tsx/dist/cli.mjs check-db.ts && node node_modules/next/dist/bin/next dev",
    "dev:old": "next dev",
    "dev:no-check": "node node_modules/next/dist/bin/next dev",
    "check-db": "node node_modules/tsx/dist/cli.mjs check-db.ts",
    "prebuild": "node node_modules/prisma/build/index.js generate",
    "build": "node node_modules/next/dist/bin/next build",
    "vercel-build": "npx prisma generate && npx next build",
    "build:step1": "node node_modules/prisma/build/index.js generate",
    "build:step2": "node node_modules/next/dist/bin/next build",
    "build:manual": "npm run build:step1 && npm run build:step2",
    "start": "node node_modules/next/dist/bin/next start",
    "lint": "next lint",
    "postinstall": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "setup:turso": "./scripts/setup-turso.sh",
    "deploy": "./scripts/deploy-vercel.sh",
    "deploy:quick": "vercel --prod"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@libsql/client": "^0.15.10",
    "@prisma/adapter-libsql": "^6.12.0",
    "@prisma/client": "^6.11.1",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@types/bcryptjs": "^3.0.0",
    "autoprefixer": "^10.4.21",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.2",
    "lucide-react": "^0.525.0",
    "next": "15.3.5",
    "pipedrive": "^28.0.2",
    "postcss": "^8.5.6",
    "react": "^19.0.0",
    "react-day-picker": "^9.8.0",
    "react-dom": "^19.0.0",
    "recharts": "^3.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "devDependencies": {
    "@types/node": "^20.19.8",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "prisma": "^6.11.1",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5"
  }
}
